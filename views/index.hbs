<div class="container my-3">
  <h2 class="d-flex justify-content-center my-5">URL Shortener</h2>
  <i class="fas fa-link link-icon my-5"></i>
  <form action="/" method="POST">
    <div class="mb-3">
      <input type="url" class="form-control mb-2" name="url" id="url" placeholder="Input URL here" aria-describedby="urlHelp">
    </div>
    <button type="submit" class="btn btn-primary">Shorten</button>
  </form>
</div>
